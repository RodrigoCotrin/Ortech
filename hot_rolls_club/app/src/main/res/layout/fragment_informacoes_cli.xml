<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.InformacoesCliFragment">

    <RelativeLayout
        android:id="@+id/frame4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="310dp">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:background="@drawable/back_conta" />

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="125dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="-55dp"
                        android:src="@drawable/barra" />

                    <ImageButton
                        android:id="@+id/voltar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#00FFFFFF"
                        android:src="@drawable/baseline_arrow_back_24" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="146dp"
                        android:layout_height="46dp"
                        android:layout_gravity="left"
                        android:layout_marginTop="76dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginBottom="78dp"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="Conta"
                        android:textColor="@color/white"
                        android:textSize="40sp" />


                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="90dp"
                        app:cardCornerRadius="60dp">

                        <ImageView
                            android:id="@+id/imgFunc"
                            android:layout_width="130dp"
                            android:layout_height="128dp"
                            android:src="@drawable/bombom"
                            android:scaleType="fitXY"/>
                    </androidx.cardview.widget.CardView>
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp">
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_bold"
                        android:textSize="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"
                        android:text="Nome"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/txtNome"
                            android:layout_width="300dp"
                            android:fontFamily="@font/montserrat_regular"
                            android:layout_height="50dp"
                            android:enabled="false"
                            android:text="Théo Littig Tesch Barbosa"
                            android:layout_marginLeft="18dp"
                            android:layout_marginTop="-8dp"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_bold"
                        android:textSize="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"
                        android:text="CPF"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/txtCPF"
                            android:layout_width="300dp"
                            android:fontFamily="@font/montserrat_regular"
                            android:layout_height="50dp"
                            android:enabled="false"
                            android:text="11111111111"
                            android:layout_marginLeft="18dp"
                            android:layout_marginTop="-8dp"/>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_bold"
                        android:textSize="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"
                        android:text="Data Nascimento"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/txtData"
                            android:layout_width="300dp"
                            android:fontFamily="@font/montserrat_regular"
                            android:layout_height="50dp"
                            android:enabled="false"
                            android:text="10/10/20"
                            android:layout_marginLeft="18dp"
                            android:layout_marginTop="-8dp"
                            android:inputType="date"/>

                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_bold"
                        android:textSize="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"
                        android:text="Email"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/txtEmail"
                            android:layout_width="300dp"
                            android:fontFamily="@font/montserrat_regular"
                            android:layout_height="50dp"
                            android:enabled="false"
                            android:text="joao.souza@gmail.com"
                            android:layout_marginLeft="18dp"
                            android:layout_marginTop="-8dp"
                            android:inputType="textEmailAddress"/>

                        <ImageButton
                            android:id="@+id/changeEmail"
                            android:layout_width="40dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="0dp"
                            android:layout_marginLeft="-20dp"
                            android:src="@drawable/baseline_edit_24"
                            android:background="@color/nada"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_bold"
                        android:textSize="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"
                        android:text="Telefone"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/txtTelefone"
                            android:layout_width="300dp"
                            android:fontFamily="@font/montserrat_regular"
                            android:layout_height="50dp"
                            android:enabled="false"
                            android:text="11328818418"
                            android:layout_marginLeft="18dp"
                            android:layout_marginTop="-8dp"
                            android:inputType="phone"/>

                        <ImageButton
                            android:id="@+id/changeTelefone"
                            android:layout_width="40dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="0dp"
                            android:layout_marginLeft="-20dp"
                            android:src="@drawable/baseline_edit_24"
                            android:background="@color/nada"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"/>
                </LinearLayout>



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_bold"
                        android:textSize="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"
                        android:text="Sexo"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/txtSexo"
                            android:layout_width="300dp"
                            android:fontFamily="@font/montserrat_regular"
                            android:layout_height="50dp"
                            android:enabled="false"
                            android:text="Masculino"
                            android:layout_marginLeft="18dp"
                            android:layout_marginTop="-8dp"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_bold"
                        android:textSize="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"
                        android:text="Senha"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/txtSenha"
                            android:layout_width="300dp"
                            android:fontFamily="@font/montserrat_regular"
                            android:layout_height="50dp"
                            android:enabled="false"
                            android:text="12345678"
                            android:layout_marginLeft="18dp"
                            android:layout_marginTop="-8dp"/>

                        <ImageButton
                            android:id="@+id/changeSenha"
                            android:layout_width="40dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="0dp"
                            android:layout_marginLeft="-20dp"
                            android:src="@drawable/baseline_edit_24"
                            android:background="@color/nada"/>
                    </LinearLayout>
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    app:cardCornerRadius="50dp">
                    <Button
                        android:id="@+id/salvarAlteraçoes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Salvar Alterações"
                        android:fontFamily="@font/montserrat_bold"
                        android:backgroundTint="@color/black"
                        android:visibility="invisible"/>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</FrameLayout>