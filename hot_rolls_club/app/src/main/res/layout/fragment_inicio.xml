<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.InicioFragment">

    <RelativeLayout
        android:id="@+id/fram2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/txtNomeUsuario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="32dp"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Oi Rodrigo"
                    android:textColor="@color/red"
                    android:textSize="20sp"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Faça já seu pedido"
                    android:textSize="15sp"
                    android:textColor="@color/gray"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="40dp"/>

                <EditText
                    android:id="@+id/editTextTextPersonName"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="25sp"
                    android:background="@drawable/search_edit_background"
                    android:drawableStart="@android:drawable/ic_menu_search"
                    android:drawablePadding="2.5sp"
                    android:ems="10"
                    android:hint="O que você vai comer hoje?"
                    android:inputType="text"
                    android:paddingStart="20dp"
                    android:textSize="16sp" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="@drawable/red_light_banner"
                    android:layout_marginLeft="26sp"
                    android:layout_marginRight="26sp">


                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="360dp"
                        android:layout_height="157dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/hotrollprato"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.56" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20sp"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Categorias"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/nada"
                    android:elevation="10dp">

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fillViewport="true">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/nada"
                            android:orientation="horizontal">



                            <androidx.appcompat.widget.AppCompatImageButton
                                android:id="@+id/btnSushi"
                                android:layout_width="75sp"
                                android:layout_height="75sp"
                                android:layout_marginHorizontal="10dp"
                                android:layout_marginTop="5dp"
                                android:textStyle="bold"
                                android:layout_marginBottom="10dp"
                                android:elevation="10dp"
                                android:text="Sushi"
                                android:background="@drawable/imgsushi"
                                android:textColor="@color/gray"
                                android:textSize="15sp" />

                            <androidx.appcompat.widget.AppCompatImageButton
                                android:id="@+id/btnYakisoba"
                                android:layout_width="75sp"
                                android:layout_height="75sp"
                                android:layout_marginHorizontal="10dp"
                                android:layout_marginTop="5dp"
                                android:textStyle="bold"
                                android:layout_marginBottom="10dp"
                                android:elevation="10dp"
                                android:background="@drawable/imgyakisoba"
                                android:text="Yakissoba"
                                android:textColor="@color/gray"
                                android:textSize="15sp" />

                            <androidx.appcompat.widget.AppCompatImageButton
                                android:id="@+id/btnBebidas"
                                android:layout_width="75sp"
                                android:layout_height="75sp"
                                android:layout_marginHorizontal="10dp"
                                android:layout_marginTop="5dp"
                                android:textStyle="bold"
                                android:layout_marginBottom="10dp"
                                android:elevation="10dp"
                                android:text="Bebidas"
                                android:background="@drawable/imgbebidas"
                                android:textColor="@color/gray"
                                android:textSize="15sp" />

                            <androidx.appcompat.widget.AppCompatImageButton
                                android:id="@+id/btnRobata"
                                android:layout_width="75sp"
                                android:layout_height="75sp"
                                android:layout_marginHorizontal="10dp"
                                android:layout_marginTop="5dp"
                                android:textStyle="bold"
                                android:layout_marginBottom="10dp"
                                android:elevation="100dp"
                                android:text="Robata"
                                android:background="@drawable/imgrobata"
                                android:textColor="@color/gray"
                                android:textSize="15sp" />

                            <androidx.appcompat.widget.AppCompatImageButton
                                android:id="@+id/btnTemaki"
                                android:layout_width="75sp"
                                android:layout_height="75sp"
                                android:layout_marginHorizontal="10dp"
                                android:layout_marginTop="5dp"
                                android:textStyle="bold"
                                android:layout_marginBottom="10dp"
                                android:elevation="100dp"
                                android:background="@drawable/imgtemaki"
                                android:text="Temaki"
                                android:textColor="@color/gray"
                                android:textSize="15sp" />

                            <androidx.appcompat.widget.AppCompatImageButton
                                android:id="@+id/btnTempura"
                                android:layout_width="75sp"
                                android:layout_height="75sp"
                                android:layout_marginHorizontal="10dp"
                                android:layout_marginTop="5dp"
                                android:textStyle="bold"
                                android:layout_marginBottom="10dp"
                                android:elevation="10dp"
                                android:text="Tempurá"
                                android:background="@drawable/imgtempura"
                                android:textColor="@color/gray"
                                android:textSize="15sp" />

                            <androidx.appcompat.widget.AppCompatImageButton
                                android:id="@+id/btnSashimi"
                                android:layout_width="75sp"
                                android:layout_height="75sp"
                                android:layout_marginHorizontal="10dp"
                                android:layout_marginTop="5dp"
                                android:textStyle="bold"
                                android:layout_marginBottom="10dp"
                                android:elevation="10dp"
                                android:text="Sashimi"
                                android:background="@drawable/imgsashimi"
                                android:textColor="@color/gray"
                                android:textSize="15sp" />

                            <androidx.appcompat.widget.AppCompatImageButton
                                android:id="@+id/btnNigiri"
                                android:layout_width="75sp"
                                android:layout_height="75sp"
                                android:layout_marginHorizontal="10dp"
                                android:layout_marginTop="5dp"
                                android:textStyle="bold"
                                android:layout_marginBottom="10dp"
                                android:elevation="10dp"
                                android:text="Nigiri"
                                android:background="@drawable/imgnagiri"
                                android:textColor="@color/gray"
                                android:textSize="15sp" />

                        </LinearLayout>
                    </HorizontalScrollView>
                </LinearLayout>

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20sp"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Popular"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/nada"
                    android:elevation="10dp">

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fillViewport="true">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/nada"
                            android:orientation="horizontal">

                            <androidx.appcompat.widget.AppCompatImageButton
                                android:id="@+id/btnYakisobaPrato"
                                android:layout_width="150sp"
                                android:layout_height="150sp"
                                android:layout_marginHorizontal="10dp"
                                android:layout_marginTop="5dp"
                                android:textStyle="bold"
                                android:layout_marginBottom="10dp"
                                android:elevation="10dp"
                                android:background="@drawable/imgyakisobaprato"
                                android:textColor="@color/gray"
                                android:textSize="15sp" />

                            <androidx.appcompat.widget.AppCompatImageButton
                                android:id="@+id/btnDorayakipopular"
                                android:layout_width="150sp"
                                android:layout_height="150sp"
                                android:layout_marginHorizontal="10dp"
                                android:layout_marginTop="5dp"
                                android:textStyle="bold"
                                android:layout_marginBottom="10dp"
                                android:elevation="10dp"
                                android:background="@drawable/imgdorayakipopular"
                                android:textColor="@color/gray"
                                android:textSize="15sp" />

                            <androidx.appcompat.widget.AppCompatImageButton
                                android:id="@+id/btnHotrollpopular"
                                android:layout_width="150sp"
                                android:layout_height="150sp"
                                android:layout_marginHorizontal="10dp"
                                android:layout_marginTop="5dp"
                                android:textStyle="bold"
                                android:layout_marginBottom="10dp"
                                android:elevation="10dp"
                                android:background="@drawable/imghotrollpopular"
                                android:textColor="@color/gray"
                                android:textSize="15sp" />
                        </LinearLayout>
                    </HorizontalScrollView>
                </LinearLayout>


            </LinearLayout>
        </ScrollView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="85dp"
            android:layout_marginLeft="300sp"
            android:layout_marginTop="5sp"
            android:src="@drawable/logohotroll" />

    </RelativeLayout>
</FrameLayout>