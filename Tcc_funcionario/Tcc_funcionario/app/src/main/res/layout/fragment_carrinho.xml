<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.TelaMesaOcupadaFragment">

    <RelativeLayout
        android:id="@+id/fram2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:background="@color/black" />
                    <ImageButton
                        android:id="@+id/voltar1"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="left"
                        android:background="@color/black"
                        android:src="@drawable/baseline_arrow_back_24"/>

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="139dp"
                        android:layout_height="190dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="2dp"
                        android:src="@drawable/barra" />

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="145dp"
                        android:layout_height="152dp"
                        android:layout_marginLeft="14dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginBottom="30dp"
                        android:src="@drawable/logo" />

                    <TextView
                        android:id="@+id/numero_mesa1"
                        android:layout_width="wrap_content"
                        android:layout_height="46dp"
                        android:layout_gravity="right"
                        android:layout_marginTop="76dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="78dp"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="Mesa 10"
                        android:textColor="@color/white"
                        android:textSize="40sp" />
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@color/white">

                    <TextView
                        android:id="@+id/txtview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_bold"
                        android:textSize="20dp"
                        android:layout_marginHorizontal="20dp"
                        android:text="Meu Carrinho"
                        android:textColor="#F89402"
                        android:layout_marginTop="10dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/spinner"
                        android:layout_marginLeft="20dp"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Qtde:"
                            android:layout_marginLeft="0dp"
                            android:textSize="18dp"
                            android:textColor="@color/black"/>

                    <EditText
                        android:id="@+id/txtQtde"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:alpha="0.5"
                        android:textSize="20dp"
                        android:ems="4"
                        android:inputType="number"
                        android:layout_marginLeft="2dp"
                        android:text="1"/>
                    </LinearLayout>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnAdicionar"
                        android:layout_width="200dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/bg_realizarpedido"
                        android:backgroundTint="#000000"
                        android:text="Adicionar produto"
                        android:textColor="#FAFAFA"
                        android:fontFamily="@font/montserrat_bold"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:elevation="20dp"
                        android:layout_margin="16dp"
                        android:background="@drawable/card_background">
                    
                     <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginBottom="4dp"
                        android:orientation="horizontal">
                        
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:text="Item"
                            android:fontFamily="@font/montserrat_bold"
                            android:textColor="@color/black"/>

                         <TextView
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:layout_weight="1"
                             android:layout_marginLeft="100dp"
                             android:textSize="18sp"
                             android:textStyle="bold"
                             android:text="Quantidade"
                             android:fontFamily="@font/montserrat_bold"
                             android:textColor="@color/black"/>

                         <TextView
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:text="Valor"
                             android:textSize="18sp"
                             android:textStyle="bold"
                             android:textColor="@color/black"
                             android:fontFamily="@font/montserrat_bold"/>
                        
                     </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                        <ListView
                            android:id="@+id/listproduto"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </ListView>
                        </LinearLayout>
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:backgroundTint="@color/black"
                            android:background="?actionBarDivider"
                            android:layout_marginHorizontal="5dp"
                            android:layout_marginTop="8dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginBottom="4dp"
                            android:orientation="horizontal">

                         <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:text="Valor Total:"
                            android:fontFamily="@font/montserrat_bold"
                            android:textColor="@color/black"/>


                         <TextView
                            android:id="@+id/valorTotal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="R$ 0"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="10dp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/montserrat_bold"/>

                      </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="0dp">

                        <TextView
                            android:id="@+id/tx"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_bold"
                            android:textSize="20dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginHorizontal="15dp"
                            android:text="Forma de pagamento"
                            android:textColor="#F89402"
                            android:layout_marginTop="10dp" />

                        <Spinner
                            android:id="@+id/formaPagamento"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_marginRight="180dp"
                            android:layout_marginLeft="20dp"
                            android:layout_gravity="left"/>

                    </LinearLayout>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnrealizaPedido"
                        android:layout_width="300dp"
                        android:layout_height="55dp"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:background="@drawable/bg_realizarpedido"
                        android:backgroundTint="#FF9800"
                        android:text="Realizar pedido"
                        android:layout_marginTop="20dp"
                        android:textColor="#FAFAFA"
                        android:elevation="20dp"
                        android:layout_marginBottom="30dp"
                        android:fontFamily="@font/montserrat_bold"/>

                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

</FrameLayout>