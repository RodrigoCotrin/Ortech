<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.PerfilFragment">


    <RelativeLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
     <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">

          <androidx.cardview.widget.CardView
              android:layout_width="match_parent"
              android:layout_height="310dp">

              <ImageView
                  android:id="@+id/imageView3"
                  android:layout_width="match_parent"
                  android:layout_height="200dp"
                  android:background="@color/black" />

              <ImageView
                  android:id="@+id/imageView2"
                  android:layout_width="139dp"
                  android:layout_height="198dp"
                  android:layout_gravity="center"
                  android:layout_marginTop="-55dp"
                  android:src="@drawable/barra" />

              <ImageView
                  android:id="@+id/imageView4"
                  android:layout_width="145dp"
                  android:layout_height="152dp"
                  android:layout_marginLeft="14dp"
                  android:layout_marginTop="24dp"
                  android:layout_marginBottom="30dp"
                  android:src="@drawable/logo" />

              <TextView
                  android:id="@+id/textView2"
                  android:layout_width="146dp"
                  android:layout_height="46dp"
                  android:layout_gravity="right"
                  android:layout_marginTop="76dp"
                  android:layout_marginRight="20dp"
                  android:layout_marginBottom="78dp"
                  android:fontFamily="@font/montserrat_bold"
                  android:text="Conta"
                  android:textColor="@color/white"
                  android:textSize="40sp" />


              <androidx.cardview.widget.CardView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center"
                  android:layout_marginTop="90dp"
                  app:cardCornerRadius="60dp">

                  <ImageView
                      android:id="@+id/imgFunc"
                      android:layout_width="130dp"
                      android:layout_height="128dp"
                      android:scaleType="fitXY"/>

              </androidx.cardview.widget.CardView>

          </androidx.cardview.widget.CardView>

          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:layout_gravity="center"
              android:layout_marginTop="8dp">
              <TextView
                  android:id="@+id/nome_func"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Nome do funcionário"
                  android:textColor="@color/black"
                  android:textSize="25dp"
                  android:fontFamily="@font/montserrat_bold"/>
              <TextView
                  android:id="@+id/nome_cargo"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center"
                  android:text="Garçom"
                  android:textSize="15dp"
                  android:layout_marginTop="5dp"
                  android:fontFamily="@font/montserrat_bold"/>
          </LinearLayout>

          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:layout_gravity="center"
              android:layout_marginTop="20dp">

              <androidx.cardview.widget.CardView
                  android:layout_width="125dp"
                  android:layout_height="100dp"
                  android:backgroundTint="@color/blue"
                  app:cardCornerRadius="20dp"
                  android:layout_marginRight="5dp">

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Pedidos Realizados"
                      android:textColor="@color/black"
                      android:textSize="15dp"
                      android:textAlignment="center"
                      android:fontFamily="@font/montserrat_bold"
                      android:layout_marginTop="5dp"/>

                  <TextView
                      android:id="@+id/num_ped"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="0"
                      android:textColor="@color/black"
                      android:textSize="20dp"
                      android:layout_marginTop="15dp"
                      android:layout_gravity="center"
                      android:textAlignment="center"
                      android:fontFamily="@font/montserrat_bold"/>


              </androidx.cardview.widget.CardView>

              <androidx.cardview.widget.CardView
                  android:layout_width="125dp"
                  android:layout_height="100dp"
                  android:backgroundTint="@color/blue"
                  app:cardCornerRadius="20dp"
                  android:layout_marginRight="5dp">

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Mesas Atualizadas"
                      android:textColor="@color/black"
                      android:textSize="15dp"
                      android:fontFamily="@font/montserrat_bold"
                      android:textAlignment="center"
                      android:layout_marginTop="5dp"/>
                  <TextView
                      android:id="@+id/num_mesas"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="0"
                      android:textColor="@color/black"
                      android:textSize="20dp"
                      android:layout_marginTop="15dp"
                      android:layout_gravity="center"
                      android:textAlignment="center"
                      android:fontFamily="@font/montserrat_bold"/>


              </androidx.cardview.widget.CardView>

              <androidx.cardview.widget.CardView
                  android:layout_width="125dp"
                  android:layout_height="100dp"
                  android:backgroundTint="@color/blue"
                  app:cardCornerRadius="20dp">

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Faz parte da equipe a"
                      android:textColor="@color/black"
                      android:textSize="15dp"
                      android:fontFamily="@font/montserrat_bold"
                      android:textAlignment="center"
                      android:layout_marginTop="5dp"/>
                  <TextView
                      android:id="@+id/num_equipe"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="0 dias"
                      android:textColor="@color/black"
                      android:textSize="20dp"
                      android:layout_marginTop="15dp"
                      android:layout_gravity="center"
                      android:textAlignment="center"
                      android:fontFamily="@font/montserrat_bold"/>


              </androidx.cardview.widget.CardView>
          </LinearLayout>
          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical">

              <ImageButton
                  android:id="@+id/perfil"
                  android:layout_marginTop="40dp"
                  android:layout_marginLeft="20dp"
                  android:layout_width="350dp"
                  android:scaleType="centerCrop"
                  android:background="@color/black"
                  android:layout_height="35dp"
                  android:src="@drawable/conta"/>
              <ImageView
                  android:layout_width="match_parent"
                  android:layout_height="2dp"
                  android:layout_marginTop="15dp"
                  android:layout_marginLeft="20dp"
                  android:background="?actionBarDivider"
                  app:layout_constraintBottom_toBottomOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintTop_toBottomOf="@+id/cardView" />
              <ImageButton
                  android:id="@+id/logout"
                  android:layout_marginTop="15dp"
                  android:layout_marginLeft="20dp"
                  android:layout_width="350dp"
                  android:scaleType="centerCrop"
                  android:background="@color/black"
                  android:layout_height="35dp"
                  android:src="@drawable/logout"/>


          </LinearLayout>


      </LinearLayout>
     </ScrollView>
    </RelativeLayout>

</FrameLayout>